{
  "appId": "com.yourcompany.jewelryapp",
  "productName": "Silvertally",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "backend/**/*",
    "electron-main.cjs",
    "package.json",
    "!backend/envs{,/**}",
    "!backend/__pycache__{,/**}",
    "!**/*.pyc"
  ],
  "extraResources": [
    {
      "from": "backend",
      "to": "backend",
      "filter": [
        "!**/__pycache__{,/**}",
        "!**/*.pyc",
        "!envs{,/**}"
      ]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "requireAdministrator"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Silvertally",
    "runAfterFinish": true,
    "allowElevation": true,
    "installerHeaderIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/icon.ico",
    "installerIcon": "assets/icon.ico",
    "perMachine": true
  },
  "publish": {
    "provider": "generic",
    "url": "https://your-update-server.com"
  }
}
